#include <iostream>
#include <conio.h>
//узбек-код
using namespace std;
int main()
{
	setlocale(LC_ALL, "");
	int selector,a=1;
	while (true)
	{
		selector = _getch();
		if (selector == 75)
		{
			if (a > 1)
			{
				a--;
			}
		}
		else if (selector == 77)
		{
			if (a < 9)
			{
				a++;
			}
		}
		else if (selector == 80)
		{
			if (a < 9);
			{
				a = a + 3;
				if (a >= 10)
				{
					a = a - 3;
				}
			}
		}
		else if (selector == 72)
		{
			if (a > 1);
			{
				a = a - 3;
				if (a <= 0)
				{
					a = a + 3;
				}
			}
		}
		system("cls");
		if (a == 1)
		{
			cout << "#|-|-"<<endl;
			cout << "-|-|-" << endl;
			cout << "-|-|-" << endl;
		}
		else if (a == 2)
		{
			cout << "-|#|-" << endl;
			cout << "-|-|-" << endl;
			cout << "-|-|-" << endl;
		}
		else if (a == 3)
		{
			cout << "-|-|#" << endl;
			cout << "-|-|-" << endl;
			cout << "-|-|-" << endl;
		}
		else if (a == 4)
		{
			cout << "-|-|-" << endl;
			cout << "#|-|-" << endl;
			cout << "-|-|-" << endl;
		}
		else if (a == 5)
		{
			cout << "-|-|-" << endl;
			cout << "-|#|-" << endl;
			cout << "-|-|-" << endl;
		}
		else if (a == 6)
		{
			cout << "-|-|-" << endl;
			cout << "-|-|#" << endl;
			cout << "-|-|-" << endl;
		}
		else if (a == 7)
		{
			cout << "-|-|-" << endl;
			cout << "-|-|-" << endl;
			cout << "#|-|-" << endl;
		}
		else if (a == 8)
		{
			cout << "-|-|-" << endl;
			cout << "-|-|-" << endl;
			cout << "-|#|-" << endl;
		}
		else if (a == 9)
		{
			cout << "-|-|-" << endl;
			cout << "-|-|-" << endl;
			cout << "-|-|#" << endl;
		}
	}
}
